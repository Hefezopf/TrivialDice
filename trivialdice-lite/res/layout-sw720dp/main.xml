<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<TextView android:layout_width="fill_parent" android:gravity="center_horizontal"
		android:id="@+id/title" android:textSize="77sp" android:layout_height="wrap_content"
		android:text="@string/title" />

	<TextView
	    android:id="@+id/link_text"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"
	    android:paddingBottom="50dp"
	    android:text="@string/link_text"
	    android:textSize="48sp" />
            
	<Button android:id="@+id/start" android:textSize="48sp" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_weight="0"
		android:text="@string/start">
		<requestFocus />
	</Button>

</LinearLayout>
