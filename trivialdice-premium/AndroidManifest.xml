            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application> 

    <instrumentation android:name="android.test.InstrumentationTestRunner" android:targetPackage="de.hopf.mobile.trivialdice"/>
    
</manifest>